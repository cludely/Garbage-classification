/* 图片 */
.top_img{
  width: 100%;
  height: 450rpx;
}
/* 列表盒子 */
.list_box{
  width:100%;
  display: flex;
  flex-direction: column;
}

/* 列表字母标题 */
.list_title{
  width: 100%;
  height: 70rpx;
  padding-left: 5%;
  font-size: larger;
  color: #fff;
}
/* 列表内容文本 */
.list_text{
  border-bottom: 1rpx solid rgb(220, 220, 220);
  width: 100%;
  height: 40rpx;
  padding-bottom: 20rpx;
  padding-left: 5%;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

/* 底部加载更多 */
.loadmore{
  text-align: center;
  color: rgb(190, 190, 190);
}

/* 右边导航条 */
.right_nav{
  width: 8%;
  height: 100%;
  opacity:0.5;
  position: fixed;
  bottom: 0;
  right: 0;
  background-color: rgb(28, 28, 28);
  z-index: 9;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  }

  /* 导航条项目 */
  .nav_item{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(255, 255, 255);
    font-size: small;
  }

  /* 提示层 */
  .tip_layer{
    width: 70px;
    height: 70px;
    line-height: 70px;
    text-align: center;
    font-size: larger;
    border-radius: 50%;
    color: #fff;
    background-color: rgba(0, 0, 0, .7);
    position: fixed;
    top: calc(50% - 35px);
    left:calc(50% - 35px);
    z-index: 11;
   }
   /* 提示层隐藏 */
   .tip_layer_hide{display: none;}