/* miniprogram/pages/collection/collection.wxss */
page{
  background-color: #CDCDB4;
}

.base{
  display: flex;      /* 弹性布局 */
  flex-direction: column;   /* 垂直排列 */
  width: 100%;
  /* height: 400rpx; */
  background-color: #F5F5F5;
  margin-bottom: 30rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  text-indent: 50rpx;   /* 首行缩进 */
  text-align: left;     /* 文字左对齐 */
  border-radius: 5px;
}

.select-btn{
  display: block;
  width:48%;
  margin-bottom: 20rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 5px;
}

.select-box{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  justify-content: space-between;
  border-top: 1px solid #CDCDB4;
  border-bottom: 1px solid 	#CDCDB4;
}
.answer{
  color: red;
}